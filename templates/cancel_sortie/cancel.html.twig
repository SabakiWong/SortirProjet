{% extends 'base.html.twig' %}
{% block title %}Annuler une sortie | {{ parent() }}{% endblock %}

{% block body %}
    <section class="createSortie">
        <div class="max-width">
            <h1>Annuler une sortie</h1>

            <div>
                {{ form_start(form) }}
                <p class="label">Nom de la sortie : {{ sortie.nom }}</p>
                <p class="label">Date de la sortie : {{ sortie.dateHeureDebut|date("d/m/Y") }}</p>
                <p class="label">Campus : {#  {{ sortie.campus }} #}</p>
                <p class="label">Lieu : {#{{ sortie.lieu }}#}</p>

                {# {{ form_row(form.infosSortie) }}#}

                <div class="button">
                    <input type="submit" value="Enregistrer">
                    <input type="reset" value="Annuler">
                </div>
                {{ form_end(form) }}
            </div>
            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </section>
{% endblock %}
